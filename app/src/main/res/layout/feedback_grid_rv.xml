<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="6dp"
    app:cardBackgroundColor="@color/cardview_background"
    app:cardMaxElevation="2dp"
    app:cardUseCompatPadding="true"
    android:layout_margin="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_feedback_Image"
            android:scaleType="fitXY"
            android:layout_margin="5dp"
            android:layout_alignParentStart="true"
            android:src="@mipmap/ic_launcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/iv_feedback_username"
            android:text="Provider Name"
            android:layout_margin="3dp"
            android:layout_gravity="start"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_toEndOf="@+id/iv_feedback_Image"
            android:maxLines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/iv_feedback_comment"
            android:text="Comments provide by user uasduashdu  uadhasdha  auhduashdua au dhaud hua dua uahd "
            android:layout_margin="3dp"
            android:layout_gravity="start"
            android:textSize="16sp"
            android:layout_below="@id/iv_feedback_username"
            android:layout_toEndOf="@+id/iv_feedback_Image"
            android:maxLines="2"
            android:maxWidth="300dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</android.support.v7.widget.CardView>